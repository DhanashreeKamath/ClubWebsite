{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "id": "http://grotto-networking.com/schemas/Q1D",
  "title": "Programming Language Poll Server",
  "descriptions": "A schema for Poll Server. By Dhanashree",
  "type": "array",
  "items": {
    "type": "object",
    "properties": {
      "language": {
        "description": "Possible Languages",
        "type": "string",
        "enum": ["Python","JavaScript","C++"]
      },
      "rating": {
        "description": "Possible rating",
         "type":"integer",
         "minimum":1,
         "maximum":10
      },
      "comments": {
        "description": "Comments on the language",
        "type": "string",
        "maxLength": 249
      }
    },
    "required": ["language", "rating","comments"],
    "additionalProperties": false
  }
}